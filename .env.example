# Environment Configuration Template
# Copy this file to .env and customize for your environment

# Database Configuration
MONGODB_URI=mongodb+srv://your-connection-string

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Calendar Integration (Optional)
# To enable Google Calendar integration, set these values:
# 1. Create a Google Cloud Project
# 2. Enable Google Calendar API
# 3. Create OAuth 2.0 credentials
# 4. Set the redirect URI to: http://localhost:8000/api/v1/calendar/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/calendar/auth/google/callback

# Email Configuration (Optional)
# For EmailJS integration
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# EmailJS Template IDs
# Welcome email for new users
EMAILJS_WELCOME_TEMPLATE_ID=your-welcome-template-id

# Activity-related templates
EMAILJS_ACTIVITY_INVITATION_TEMPLATE_ID=template_du748ku
EMAILJS_GUEST_ACTIVITY_INVITATION_TEMPLATE_ID=your-guest-invitation-template-id
EMAILJS_ACTIVITY_CANCELLATION_TEMPLATE_ID=template_zspn3o6
EMAILJS_ACTIVITY_RESPONSE_TEMPLATE_ID=template_jm0t1cw
EMAILJS_ACTIVITY_RESPONSE_CHANGED_TEMPLATE_ID=your-response-changed-template-id
EMAILJS_ACTIVITY_FINALIZED_TEMPLATE_ID=your-activity-finalized-template-id
EMAILJS_ACTIVITY_UPDATE_TEMPLATE_ID=your-activity-update-template-id
EMAILJS_UPCOMING_ACTIVITY_REMINDER_TEMPLATE_ID=template_mlnxnzh

# Contact-related templates
EMAILJS_CONTACT_REQUEST_TEMPLATE_ID=your-contact-request-template-id
EMAILJS_CONTACT_ACCEPTED_TEMPLATE_ID=your-contact-accepted-template-id
EMAILJS_ACCOUNT_INVITATION_TEMPLATE_ID=your-account-invitation-template-id

# System templates
EMAILJS_PASSWORD_RESET_TEMPLATE_ID=template_bsaapmj
EMAILJS_DEADLINE_REMINDER_TEMPLATE_ID=your-deadline-reminder-template-id

# Weather API Configuration (Optional)
WEATHER_API_KEY=your-weather-api-key

# LLM Configuration
MISTRAL_API_KEY=your-mistral-api-key

# Environment
ENVIRONMENT=development
DEBUG=true
FRONTEND_URL=http://localhost:5137

# Twilio Configuration (Optional)
# For SMS and WhatsApp notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890