# Application Environment
APP_ENV=development
PORT=8000

# MongoDB Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=YourApp

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=3600

# CORS Configuration
# Add your frontend URLs separated by commas
CORS_ORIGINS=http://localhost:5173,http://localhost:5137